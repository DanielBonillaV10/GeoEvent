<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scroll con el contenido (texto + imagen + mapa) centrado -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/delete_event_button"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Título del evento -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evento Título"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Descripción del evento -->
            <TextView
                android:id="@+id/textDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evento Descripción"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <!-- Fecha del evento -->
            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evento Fecha"
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <!-- Imagen del evento -->
            <ImageView
                android:id="@+id/detail_event_image"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="Imagen del evento"
                android:scaleType="centerCrop" />

            <!-- Contenedor para el mapa -->
            <FrameLayout
                android:id="@+id/map_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Botón de eliminar evento fijado al fondo -->
    <Button
        android:id="@+id/delete_event_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#415659"
        android:text="Eliminar Evento"
        android:textColor="#FFF" />


</RelativeLayout>
